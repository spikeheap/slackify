<head>
  <link rel="stylesheet" href="assets/app.css">
</head>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Slackify</h1>
      <% if current_account.nil? %>
        <p>You are not logged in. <a href="/auth/spotify">Link Spotify</a></p>
      <% else %>
        <em>You are logged in as <%= @account.display_name %> (<a href="#" data-action="logout">log out</a>)</em>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <%= yield %>
</div>

<script type="text/javascript" src="js/jquery-3.1.0.min.js"></script>
<script type="text/javascript" src="assets/app.js"></script>

